{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["@altv/types-server", "@altv/types-shared"]
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules"]
}
